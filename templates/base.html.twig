<!doctype html>
<html lang="fr">
 <head>
 <meta charset="utf-8">
 <meta name="viewport" content="width=device-width, initial-scale=1">
 <title>{% block title %}OptiChic{% endblock %}</title>
{% block stylesheets %}
  <link href="https://bootswatch.com/5/slate/bootstrap.min.css" rel="stylesheet">
 <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
 <link rel="stylesheet" href="https://getbootstrap.com/docs/5.3/assets/css/docs.css">
 <link href="../node_modules/bootstrap/scss/bootstrap.scss" rel="stylesheet">
 <link href="{{asset("css/style.css")}}" rel="stylesheet">
 
 {% endblock %}

 </head>
 <body>
<nav class="navbar navbar-expand-lg bg-light" data-bs-theme="light">
    <div class="collapse navbar-collapse" id="navbarColor03">
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
          <a class="nav-link active" href="{{ path('app_accueil') }}">OptiChic
            <span class="visually-hidden">(current)</span>
          </a>
        </li>
        <li class="nav-item">
           <a class="nav-link" href="{{ path('app_lunettesenfant') }}">Lunettes pour Enfant</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="{{ path('app_lunettesfemme') }}">Lunettes pour Femme</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="{{ path('app_lunetteshomme') }}">Lunettes pour Homme</a>
        </li>
        {% if is_granted('ROLE_ADMIN') %}
        <li class="nav-item">
          <a class="nav-link" href="{{ path('app_liste_produits') }}">Liste des produits</a>
        </li>
        {% endif %}
        <li class="nav-item">
          <a class="nav-link" href="{{ path('app_panier') }}">Panier</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="{{ path('app_mentionslegales') }}">Mentions LÃ©gales</a>
        </li>
      </ul>
      <form class="d-flex" method="get" action="{{ path('app_recherche') }}">
        <input class="form-control me-sm-2" type="search" name="q" placeholder="Recherchez un produit...">
        <button class="btn btn-secondary my-2 my-sm-0" type="submit">Rechercher</button>
      </form>
      <ul class="navbar-nav me-auto">
        {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
        <li class="nav-item">
          <a class="nav-link" href="{{ path('app_login') }}">Se connecter</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="{{ path('app_register') }}">S'inscrire</a>
        </li>
        {% else %}
        <li class="nav-item">
          <a class="nav-link" href="{{ path('app_logout') }}">
            {{ app.user.email }}
            <i class"=bi-x-circle-fill"></i>
          </a>
        </li>
        {% endif %}
      </ul>
    </div>
  </div>
</nav>
{% block body %}OptiChic{% endblock %}
{% block javascripts %}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
</body>
</html>
